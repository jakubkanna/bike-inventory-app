extends layout

block content

  h1 Category: #{category.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Bikes
    if category_bikes.length
      dl
        each bike in category_bikes
          dt
            a(href=bike.url) #{bike.title}
          dd #{bike.summary}
    else
      p This category has no bikes.
    p
          a(href=category.url+"/delete") Delete Category
    p
        a(href=category.url+"/update") Update Category