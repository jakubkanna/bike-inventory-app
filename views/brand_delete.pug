extends layout

block content

  h1 #{title}: #{brand.name}
  hr
  if brand_bikes.length

    p #[strong Delete the following bikes before attempting to delete this brand.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Bikes
      dl
        each bike in brand_bikes
          dt
            a(href=bike.url) #{bike.model}
          dd #{bike.summary}

  else
    p Do you really want to delete this Brand?

    form(method='POST')
      div.form-group
        input#brandid.form-control(type='hidden', name='brandid', value=brand._id )
      hr
      button.btn.btn-danger(type='submit') Delete
