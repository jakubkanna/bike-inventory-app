extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Brand name' name='name' required value=(undefined===brand ? '' : brand.name) )
    div.form-group
      label(for='origin') Origin:
      input#origin.form-control(type='text', placeholder='Brand origin' name='origin' value=(undefined===brand ? '' : brand.origin))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
