extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='bike') Bike:
      select#bike.form-control(name='bike' required onchange='updateSizes()')
        option(value='') --Please select a bike--
        each bike in bike_list
          if selected_bike==bike._id.toString()
            option(value=bike._id, selected) #{bike.model}
          else
            option(value=bike._id) #{bike.model}

    div.form-group
      label(for='size') Size:
      select#size.form-control(name='size' required)
        option(value='') --Please select a size--
        each val in ["XXS","XS","M","S","L","XL","XXL","S/M","M/L","L/XL","XL/XXL"]
          if undefined===bikeinstance || bikeinstance.status!=val
            option(value=val)= val
          else
            option(value=val selected)= val

    div.form-group
      label(for='status') Status:
      select#status.form-control(name='status' required)
        option(value='') --Please select a status--
        each val in ['Available', 'Unavailable', 'Ask for availability']
          if undefined===bikeinstance || bikeinstance.status!=val
            option(value=val)= val
          else
            option(value=val selected)= val

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg