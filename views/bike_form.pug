
extends layout

block content
  h1=title

  form(method='POST')
    section
      legend 
        h2 Basic information
      div.form-group
        label(for='model') Model:
        input#model.form-control(type='text', placeholder='Bike model' name='model' required value=(undefined===bike ? '' : bike.model) )
      div.form-group
        label(for='brand') Brand:
        select#brand.form-control(name='brand' required)
          option(value='') Select Brand
          each brand in brand_list
            option(value=brand._id)= brand.name
      div.form-group
        label(for='category') Category:
        select#category.form-control(name='category' required)
          option(value='') Select Category
          each category in category_list
            option(value=category._id)= category.name
      div.form-group
        label(for='price') Price:
        input#price.form-control(type='number', placeholder='Price' name='price' required value=(undefined===bike ? '' : bike.price) )
      div.form-group
        label(for='summary') Summary:
        textarea#summary.form-control(name='summary' rows='3')= (undefined===bike ? '' : bike.summary)
    section
      legend 
        h2 Specification
      include bike_form_spec.pug
    br
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
